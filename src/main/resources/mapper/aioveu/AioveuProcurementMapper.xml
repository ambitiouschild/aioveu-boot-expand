<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aioveu.boot.aioveu.mapper.AioveuProcurementMapper">

    <!-- 获取采购流程分页列表 -->
    <select id="getAioveuProcurementPage" resultType="com.aioveu.boot.aioveu.model.vo.AioveuProcurementVO">
        SELECT
                id,
                procurement_no,
                supplier_id,
                material_id,
                quantity,
                unit_price,
                total_amount,
                order_date,
                expected_delivery,
                actual_delivery,
                receipt_date,
                warehouse_id,
                inbound_date,
                status,
                applicant_id,
                reviewer_id,
                review_time,
                remark,
                create_time,
                update_time
        FROM
            aioveu_procurement
        <where>
            <if test="queryParams.id != null">
                AND id LIKE CONCAT('%', #{queryParams.id}, '%')
            </if>
            <if test="queryParams.procurementNo != null and queryParams.procurementNo != ''">
                AND procurement_no LIKE CONCAT('%', #{queryParams.procurementNo}, '%')
            </if>
            <if test="queryParams.supplierId != null">
                AND supplier_id LIKE CONCAT('%', #{queryParams.supplierId}, '%')
            </if>
            <if test="queryParams.materialId != null">
                AND material_id LIKE CONCAT('%', #{queryParams.materialId}, '%')
            </if>
            <if test="queryParams.orderDate != null">
                <if test="queryParams.orderDate[0] != null and queryParams.orderDate[0] != ''">
                    <bind name="startDate" value="queryParams.orderDate[0].length() == 10 ? queryParams.orderDate[0] + ' 00:00:00' : queryParams.orderDate[0]"/>
                    AND order_date &gt;= #{startDate}
                </if>
                <if test="queryParams.orderDate[1] != null and queryParams.orderDate[1] != ''">
                    <bind name="endDate" value="queryParams.orderDate[1].length() == 10 ? queryParams.orderDate[1] + ' 23:59:59' : queryParams.orderDate[1]"/>
                    AND order_date &lt;= #{endDate}
                </if>
            </if>
            <if test="queryParams.status != null">
                AND status LIKE CONCAT('%', #{queryParams.status}, '%')
            </if>
            <if test="queryParams.applicantId != null">
                AND applicant_id LIKE CONCAT('%', #{queryParams.applicantId}, '%')
            </if>
        </where>
    </select>

</mapper>
