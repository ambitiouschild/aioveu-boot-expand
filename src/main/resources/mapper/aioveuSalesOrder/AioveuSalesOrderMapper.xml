<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aioveu.boot.aioveuSalesOrder.mapper.AioveuSalesOrderMapper">

    <!-- 获取销售订单分页列表 -->
    <select id="getAioveuSalesOrderPage" resultType="com.aioveu.boot.aioveuSalesOrder.model.vo.AioveuSalesOrderVO">
        SELECT
                id,
                order_no,
                customer_id,
                contact_id,
                order_date,
                expected_delivery,
                actual_delivery,
                total_amount,
                currency,
                discount,
                tax_rate,
                tax_amount,
                grand_total,
                payment_terms,
                payment_status,
                order_status,
                shipping_address,
                shipping_method,
                tracking_no,
                sales_rep_id,
                operator_id,
                notes,
                create_time,
                update_time
        FROM
            aioveu_sales_order
        <where>
            <if test="queryParams.id != null">
                AND id LIKE CONCAT('%', #{queryParams.id}, '%')
            </if>
            <if test="queryParams.orderNo != null and queryParams.orderNo != ''">
                AND order_no LIKE CONCAT('%', #{queryParams.orderNo}, '%')
            </if>
            <if test="queryParams.customerId != null">
                AND customer_id LIKE CONCAT('%', #{queryParams.customerId}, '%')
            </if>
            <if test="queryParams.orderDate != null">
                <if test="queryParams.orderDate[0] != null and queryParams.orderDate[0] != ''">
                    <bind name="startDate" value="queryParams.orderDate[0].length() == 10 ? queryParams.orderDate[0] + ' 00:00:00' : queryParams.orderDate[0]"/>
                    AND order_date &gt;= #{startDate}
                </if>
                <if test="queryParams.orderDate[1] != null and queryParams.orderDate[1] != ''">
                    <bind name="endDate" value="queryParams.orderDate[1].length() == 10 ? queryParams.orderDate[1] + ' 23:59:59' : queryParams.orderDate[1]"/>
                    AND order_date &lt;= #{endDate}
                </if>
            </if>
            <if test="queryParams.paymentStatus != null">
                AND payment_status LIKE CONCAT('%', #{queryParams.paymentStatus}, '%')
            </if>
            <if test="queryParams.orderStatus != null">
                AND order_status LIKE CONCAT('%', #{queryParams.orderStatus}, '%')
            </if>
            <if test="queryParams.shippingMethod != null">
                AND shipping_method LIKE CONCAT('%', #{queryParams.shippingMethod}, '%')
            </if>
            <if test="queryParams.salesRepId != null">
                AND sales_rep_id LIKE CONCAT('%', #{queryParams.salesRepId}, '%')
            </if>
        </where>
    </select>

</mapper>
